
<h1>Books</h1>
<table class="table">
  <thead>
      <tr>
        <th class="header1">Title</th>
        <th class="header2">Body</th>
        <th colspan="3"></th>
     </tr>
  </thead>
  <% @books.each do |book| %>
  <tbody>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show","/books/#{book.id}" %></td>
      <td><%= link_to "Edit","/books/#{book.id}/edit"  %></td>
      <td><%= link_to "Destroy","/books/#{book.id}",method: :delete,"data-confirm" => "Are you sure?" %></td>
    </tr>
  </tbody>
  <% end%>
</table>


<h2>New Book</h2>


<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>body</h4>    <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
